<% if @post.present? %>
  <p>Post #<%= @post.id %> by <%= @user.name %></p>
  Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %>

    <p><%= @post.text %></p>

    <ul>
      <% @post.comments.each do |comment| %>
        <li><%= @user.name %>: <%= comment.text %></li>
      <% end %>
    </ul>
<% end %>
