<h2>Home Page</h2>

<ul>
  <% @users.includes(:posts).each do |user| %>
    <li class="user-item" data-user-id="<%= user.id %>">
      <%= image_tag user.photo, alt: "picture of user", class: "user-profile-picture", style: "width: 50px; height: 50px;" %>
      <div class="user-details">
        <p class="user-username">
          <%= link_to user.name, user_path(user) %>
        </p>
        <p class="user-post-count">
          Number of posts: <%= user.posts_counter %>
        </p>
      </div>
    </li>
  <% end %>
</ul>
